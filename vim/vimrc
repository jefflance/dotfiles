set nocompatible              " be iMproved, required
filetype off                  " required
" viminfo configuration
set viminfo='100,n$HOME/.vim/files/info/viminfo



""""""""""""""""""""""""""""""""""""""""""""""""""""""
"  ___ _   _ _____ _____ ____  _____ _    ____ _____
" |_ _| \ | |_   _| ____|  _ \|  ___/ \  / ___| ____|
"  | ||  \| | | | |  _| | |_) | |_ / _ \| |   |  _|
